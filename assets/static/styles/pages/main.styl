.hero
    background: primaryBlue url('images/content/hero/hero_bg.png') no-repeat center / cover
.hero__rows
    display: flex
    flex-direction: column
    justify-content: center
    height: 100vh
.hero__row
    min-height: 40.625em
    padding: 7.5em 0
    @media screen and (orientation: portrait) and (max-width: 480px)
        min-height: auto
        padding: 2.5em 0
    @media screen and (orientation: landscape) and (max-width: 768px)
        min-height: auto
        padding: 0
.hero__col
    padding: 3em 0
    text-align: right
    color: #fff
    @media screen and (orientation portrait) and (max-width: 480px)
        text-align: center
    @media screen and (orientation: landscape) and (max-width: 768px)
        padding: 1em 0
    @media screen and (orientation: landscape) and (max-width: 600px)
        text-align: center
.hero__title
    margin-bottom: .571em
    font: 4.375em / 1 fontMainTitle 
    @media screen and (orientation: portrait) and (max-width: 345px)
        margin-bottom: .3em
    @media screen and (orientation: landscape) and (max-width: 768px)
        margin-bottom: .1em
        font-size: 4em
.hero__text
    margin-bottom: 50px
    font: 2.188em / 1 fontLight
    @media screen and (orientation: portrait) and (max-width: 345px)
        margin-bottom: 32px
        font-size: 1.5em
    @media screen and (orientation: landscape) and (max-width: 768px)
        margin-bottom: 1em
        font-size: 2em
    @media screen and (orientation: landscape) and (max-width: 600px)
        margin-bottom: 2em
        font-size: 1.5em
    .hero__nb
        font-family: fontBoldItalic
.hero__pic
    position: absolute
    bottom: -33%
    left: 18.5%
    width: 18.1%
    @media screen and (orientation: portrait) and (max-width: 1024px)
        bottom: -10%
        width: 30.1%
    @media screen and (orientation: portrait) and (max-width: 480px)
        bottom: -24%;
        left: 25%
        width: 50.1%;
    @media screen and (orientation: portrait) and (max-width: 420px)
        bottom: -35%
    @media screen and (orientation: portrait) and (max-width: 345px) and (max-height: 480px)
        bottom: -44%
    @media screen and (orientation: landscape) and (max-width: 600px)
        display: none
.about
    background-color: primaryLightGrey
.about__rows
    @extend .hero__rows
    @media screen and (orientation: portrait) and (max-width: 420px)
        justify-content: flex-start
.about__row
    @extend .hero__row
    display: flex
    justify-content: flex-start
.about__col
    max-width 35em
    padding: 1.250em 0
    @media screen and (orientation: portrait) and (max-width: 480px)
        max-width: 100%
        text-align: center
    @media screen and (orientation: portrait) and (max-width: 345px)
        padding: 0
    @media screen and (orientation: landscape) and (max-width: 768px)
        padding: 1em 0
.about__title
    margin-bottom: .650em
.about__text
    margin-bottom: 1.438em 
.about__nb
    padding-left: 1em
    margin-bottom: 4.125em
    font-family: fontItalic
    border-left: .375em solid primaryBlue 
    @media screen and (orientation: landscape) and (max-width: 768px)
        margin-bottom: 3em
.about__pic
    position: absolute
    right: -5.5%
    bottom: -12%
    z-index: -1
    width: 32.3%
    @media screen and (orientation: portrait) and (max-width: 1024px)
        right: -2.5%
        bottom: -5%
        width: 38.3%
    @media screen and (orientation: portrait) and (max-width: 480px)
        right: auto;
        left: 21%;
        bottom: -18%;
        width: 60%;
    @media screen and (orientation: portrait) and (max-width: 345px) and (max-height: 480px)
        left: 20%
        bottom: -35%
    @media screen and (orientation: landscape) and (max-width: 700px)
        right: -10%
        bottom: -20%
    @media screen and (orientation: landscape) and (max-width: 600px)
        display: none
.port__rows
    @extend .hero__rows
    @media screen and (orientation: portrait) and (max-width: 420px)
        justify-content: flex-start
.port__row
    @extend .hero__row
    display: flex
    justify-content: flex-end
    padding: 6.063em 0
    @media screen and (orientation: portrait) and (max-width: 345px)
        padding: 2.5em 0
    @media screen and (orientation: landscape) and (max-width: 768px)
        padding: 0
.port__col
    max-width: 25.625em
    padding-left: 1em
    @media screen and (orientation: portrait) and (max-width: 480px)
        max-width: 100%
        padding: 0
        text-align: center
    @media screen and (orientation: landscape) and (max-width: 600px)
        max-width 100%
        padding: 0
.port__title
    margin-bottom: .8em
.port__nb
    margin-bottom: 1.5em
    font-family: fontSemiBoldItalic
    color: primaryDarkGreyNB
.port__text
    margin-bottom: 3.375em
    @media screen and (orientation: landscape) and (max-width: 768px)
        margin-bottom: 3em
.port__pic
    position: absolute
    left: -6.3%
    bottom: -9.5%    
    z-index: -1
    width: 66.5%
    @media screen and (orientation: portrait) and (max-width: 1024px)
        bottom: -3.5%
        width: 75.5%
    @media screen and (orientation: portrait) and (max-width: 480px)
        left: -5.3%
        width: 90%
    @media screen and (orientation: landscape) and (max-width: 768px)
        left: -19.3%
    @media screen and (orientation: landscape) and (max-width: 700px)
        left: -30%
    @media screen and (orientation: landscape) and (max-width: 600px)
        display: none
.donate
    padding: 5.688em 0 6.188em 0
    text-align: center
    background: primaryGreen url('images/content/donate/bgGreen.png') no-repeat center / cover
    @media screen and (orientation: portrait) and (max-width: 345px)
        padding: 5em 0
.donate__title
    margin-bottom: .8em
    letter-spacing: .025em
    color: #fff
    @media screen and (orientation: portrait) and (max-width: 345px)
        font-size: 2em
.cont
    background-color: primaryLightGrey
.cont__rows
    @extend .hero__rows
.cont__list
    margin-bottom: 4.4em
    text-align: center
.cont__item
    display: inline-block
    border: .188em solid primaryDarkGrey
    border-radius: 50%
    &:not(:last-child)
        margin-right: 2.188em
.cont__link
    display: block
    width: 3.125em
    height: 3.125em
    .fa
        font-size: 1.5em
        line-height: 2.083em
        color: primaryDarkGrey
        @media screen and (orientation: portrait) and (max-width: 420px)
            line-height: 2.2em