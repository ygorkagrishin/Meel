.hero
    background: primaryBlue url('images/content/hero/hero_bg.png') no-repeat center / cover
.hero__col
    text-align: right
    color: #fff
.hero__title
    margin-bottom: 55px
    font: 70px / 1 fontMainTitle 
.hero__text
    margin-bottom: 52px
    font: 35px / 1 fontLight
    .hero__nb
        font-family: fontBoldItalic
.about
    background-color: primaryLightGrey
.about__col
    max-width 560px
.about__text
    margin-bottom: 33px 
.about__nb
    padding-left: 16px
    margin-bottom: 70px
    font-family: fontItalic
    border-left: 6px solid primaryBlue 
.about__pic
    position: absolute
    right: -5%
    bottom: -10%
    z-index: -1
.port__row
    display: flex
    justify-content: flex-end
.port__col
    max-width: 410px
.port__nb
    margin-bottom: 36px
    font-family: fontSemiBoldItalic
    color: primaryDarkGreyNB
.port__text
    margin-bottom: 52px
.port__pic
    position: absolute
    left: -10%
    bottom: -11%    
    z-index: -1
.donate
    padding: 100px 0
    text-align: center
    background: primaryGreen url('images/content/donate/bgGreen.png') no-repeat center / cover
.donate__title
    color: #fff
.cont
    background-color: primaryLightGrey
.cont__list
    margin-bottom: 67px
    text-align: center
.cont__item
    display: inline-block
    border: 3px solid primaryDarkGrey
    border-radius: 50%
    &:not(:last-child)
        margin-right: 35px
.cont__link
    display: block
    width: 56px
    height: 56px
    .fa
        font-size: 24px
        line-height: 56px
        color: primaryDarkGrey