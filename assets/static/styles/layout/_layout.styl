*
    box-sizing: border-box

html
    @media screen and (min-width: 1800px)
        font-size: 125.0%
    @media screen and (max-width: 1440px)    
        font-size: 100%
    @media screen and (max-width: 1024px)
        font-size: 87.5%
    @media screen and (max-width: 480px)
        font-size: 75.0%

body
    padding: 0
    font: 1em / 1.563em mainFont
    color: primaryGrey

.sect
    position: relative
    z-index: 1
    overflow: hidden

.container
    width: 98%
    max-width 60.000em
    padding: 0 0.625em
    margin: 0 auto
    

for $n in (1..6)
    h{$n}
        margin: 0
        line-height: 1

ul, li
    padding: 0
    margin: 0
    list-style: none

p
    margin: 0

a
    text-decoration: none 

img 
    display: inline-block