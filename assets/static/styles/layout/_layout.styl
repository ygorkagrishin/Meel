*
    box-sizing: border-box

html
    font: 16px / 25px mainFont

body
    padding: 0

.sect
    position: relative

.container
    width: 100%
    max-width 960px
    padding: 0 .625em // 10px 
    margin: 0 auto

for $n in (1..6)
    h{$n}
        margin: 0
        line-height: 1

ul, li
    padding: 0
    margin: 0
    list-style: none

p
    margin: 0

a
    text-decoration: none 

img 
    display: inline-block