*
    box-sizing: border-box

html
    font-size: 100%

body
    padding: 0
    font: 16px / 25px mainFont
    color: primaryGrey

.sect
    position: relative
    z-index: 1
    overflow: hidden

.container
    width: 100%
    max-width 960px
    padding: 0 10px 
    margin: 0 auto

.sect__rows
    display: flex
    flex-direction: column
    justify-content: center
    height: 100vh

for $n in (1..6)
    h{$n}
        margin: 0
        line-height: 1

ul, li
    padding: 0
    margin: 0
    list-style: none

p
    margin: 0

a
    text-decoration: none 

img 
    display: inline-block